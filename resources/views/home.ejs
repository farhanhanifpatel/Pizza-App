<section class="hero py-16 bg-gray-100 px-14">
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2">
            <h6 class="text-lg text-gray-600"><em>Are you hungry?</em></h6>
            <h1 class="text-6xl font-bold text-gray-800 leading-tight">Don't wait, order now</h1>
            <button class="py-1 px-4 rounded-full flex items-center transition order-now">Order Now</button>
        </div>
        <div class="w-1/2">
            <img src="/img/hero-pizza.png" alt="Hero Pizza" />
        </div>
    </div>
</section>

<section class="menu container mx-auto py-8 px-14">
    <h1 class="text-2xl font-bold mb-8 text-gray-800">All Pizza</h1>
    <div class="grid grid-cols-4 gap-8">
        <!-- Repeatable Pizza Card -->
        <% pizzas.forEach(function(pizza){ %>
        <div class="w-64 bg-white shadow-lg rounded-lg p-4">
            <img src="/img/<%= pizza.image %>" alt="Pizza" class="h-40 mx-auto mb-4" />
            <div class="text-center">
                <h2 class="mb-4 text-lg font-semibold text-gray-700"><%= pizza.name %></h2>
                <span class="size py-1 px-4 rounded-full uppercase text-xs bg-gray-200 text-gray-600"
                    ><%= pizza.size%></span
                >
                <div class="flex items-center justify-around mt-4">
                    <span class="font-bold text-lg text-gray-800">$ <%= pizza.price %></span>
                    <button
                        data-pizza="<%= JSON.stringify(pizza) %>"
                        class="add-to-cart py-1 px-4 rounded-full flex items-center"
                    >
                        <span class="text-xl font-bold">+</span>
                        <span class="ml-2">Add</span>
                    </button>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</section>
